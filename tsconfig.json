{
  "extends": "@tsconfig/node20",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "paths": {
      "@common/*": [
        "src/common/*"
      ],
      "@core/*": [
        "src/core/*"
      ]
    }
  }
}